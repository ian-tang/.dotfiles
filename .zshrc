function mktouch() {
    local arg=$1
    local num_dirs=$(grep -o "/" <<< $arg | wc -l | xargs echo)
    if [ $num_dirs -gt 0 ]
    then
        parent_dirs=$(echo $arg | cut -d / -f 1-$num_dirs)
        mkdir -p $parent_dirs && touch $arg
    else
        touch $arg
    fi
}

